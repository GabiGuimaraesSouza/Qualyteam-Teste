@page
@model IndexModel
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = "Aplicativo Qualyteam";
}

<div class="text-center">
    <h1 class="display-4">Cadastro de Documentos</h1>
    <br />
    <br />

    <form method="post" enctype="multipart/form-data" asp-page="Index">
        Código do Documento: <input type="number" placeholder="Digite o código" id="codigo" asp-for="Codigo" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
       
        Título: <input type="text" placeholder="Digite o Título" id="titulo" asp-for="Titulo"/>
        <span asp-validation-for="Titulo" class="text-danger"></span>
       
        Processo:
        <select class="width:150px;" name="ProcessoSelecionado" asp-items="Model.Processos">
        </select>
        <span asp-validation-for="ProcessoSelecionado" class="text-danger"></span>
      

        Categoria: <input type="text" placeholder="Digite a Categoria" id="categoria" asp-for="Categoria" />
        <span asp-validation-for="Categoria" class="text-danger"></span>
       

        <br />
        <br />

        Arquivo: <input type="file" asp-for="Arquivo" />
        <span asp-validation-for="Arquivo" class="text-danger"></span>
        <br />
        @{
            if (!String.IsNullOrEmpty(Model.MensagemErro))
            {
                <div class="alert alert-danger">@Model.MensagemErro</div>
            }
        }
        <br />
        <br />
        <br />
        <input type="submit" />

    </form>


</div>
